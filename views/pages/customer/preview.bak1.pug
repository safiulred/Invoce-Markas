style.
    * {
        font-family: sans-serif;
    }
    th, td {
        padding-top: 10px;
    }
    
    .text {
        font-size : 9px;
    }

    .text-box {
        font-size : 13px;
    }

    .text-bold {
        font-weight : 'bold';
        font-size : 12px;
    }
div#contentView
    - if (data && data.length > 0)
        each r, idx in data 
            div(style = "margin-left : 5px; margin-right : 5px; margin-bottom : 10px;")
                div(style="padding: 10px; display: flex; flex-wrap: wrap; margin-right: 25px; margin-left: -15px;")
                    div(style = "flex : 1; margin-right :20px;")
                        if (setting&&setting.logo)
                            img(src = setting? "/uploads/"+setting.logo : "/logo.png" style = "object-fit : cover; height: 30px; margin-top : 13px;")
                        div(style = "display: flex; align-item: center;")
                            div(style="flex : 1;")
                            div(style="flex : 1;")
                                table(style="width: 80%;")
                                    tr(style = 'padding : 10px;')
                                        td(width = "5%").text NO
                                        td(width = '1%').text : 
                                        td.text(style = "border-bottom:1px solid #000" width="10%") #{idx+1}
                        b(style = "text-decoration : underline; font-weight: bold;").text NOTA
                        table(style="width: 90%;")
                            tbody
                                tr(style = 'padding : 10px;')
                                    td(width = "5%" style = "font-weight: bold; font-size : 11px;").text NAMA
                                    td(width = '1%').text : 
                                    td.text(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="10%") #{r.nama.toUpperCase()}
                                tr
                                    td(width = "5%" style = "font-weight: bold; font-size : 11px;").text TGL
                                    td(width = '1%').text : 
                                    td(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="10%").text #{r.billing_date}
                                tr
                                    td(width = "5%" style = "font-weight: bold; font-size : 11px;").text BULAN
                                    td(width = '1%').text : 
                                    td(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="10%").text #{r.periode}
                                tr
                                    td(width = "5%" style = "font-weight: bold; font-size : 11px;").text TOTAL
                                    td(width = '1%').text : 
                                    td(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="10%").text #{r.tagihan}
                    
                    div(style = "flex : 2; margin-left: 40px;")
                        if (setting&&setting.logo)
                            img(src = setting? "/uploads/"+setting.logo : "/logo.png" style = "object-fit : cover; height: 30px; margin-top : 13px;")
                        div(style = "display : flex; flex-wrap: wrap; margin-top : 10px;")
                            div(style = "flex : 1;")
                                b(style = "text-decoration : underline; font-weight: bold;").text NOTA
                                div(style = "display:flex; margin-top : 10px;")
                                    table(style="width: 100%;")
                                        tbody
                                            tr(style = 'padding : 10px;')
                                                td(width = "15%" style = "font-weight: bold; font-size : 11px;").text Layanan Internet Periode 
                                                td(width = '1%').text : 
                                                td.text(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="15%") #{r.periode}
                                            tr(style = 'padding : 10px;')
                                                td(width = "5%" style = "font-weight: bold; font-size : 1`px;").text Total 
                                                td(width = '1%').text : 
                                                td.text(style = "border-bottom:1px solid #000; font-weight: bold; font-size : 11px;" width="15%") #{r.tagihan}
                                
                            div(style = "flex : 1; margin-left : 10px;")
                                div(style = "padding : 10px; border : 2px solid #000;")
                                    div(style = "display : flex; align-item : center;")
                                        b(style = "flex : 3;").text-box Kepada
                                        div(style = "border-bottom : 1px solid #000; width : 100%; flex : 4; font-size : 15px;") #{r.nama.toUpperCase()}
                                    div(style = "display : flex; align-item : center;")
                                        b(style = "flex : 3;").text-box Alamat
                                        div(style = "border-bottom : 1px solid #000; width : 100%; flex : 4;font-size : 15px;") #{r.alamat}
                                    div(style = "display : flex; align-item : center;")
                                        b(style = "flex : 3;").text-box Tgl
                                        div(style = "border-bottom : 1px solid #000; width : 100%; flex : 4; font-size : 15px;") #{r.billing_date}

                div(style = "margin-bottom : 50px;")    

script(src="/js/preview.js")