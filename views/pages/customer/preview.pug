style.
    body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #FAFAFA;
        font-family: sans-serif !important;
    }
    * {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
    }
    th, td {
        padding-top: 10px;
    }
    .page {
        width: 100%;
        height: 8cm;
        margin:10px;
        background: white;
    }
    .subpage {
        border: 1px red solid;
        height: 8cm;
        padding : 10px;
    }
    .text {
        font-size : 15px !important;
        font-weight: bold !important;
    }
    .text-bold {
        font-size : 18px !important;
        font-weight: bold !important;
    }
    .text-box{
        font-size : 18px !important;
        font-weight:bold !important;
    }
    .text-nota {
        font-size : 20px !important;
        font-weight: bold !important;
    }
    @page {
        size: auto;
       margin: 0mm;
    }

    @media print {
        html, body {
            width: 100%;
            margin : 0;
            padding: 0;
            font-family: sans-serif !important;
        }
        .page {
            width: 100%;
            height: 8cm;
            margin:10px;
            background: white;
            break-before: always;
        }
        .subpage {
            border: 1px red solid;
            height: 8cm;
            padding : 10px;
        }
        .text {
            font-size : 13px !important;
            font-weight: bold !important;
        }
        .text-bold {
            font-size : 18px !important;
            font-weight: bold !important;
        }
        .text-box{
            font-size : 18px !important;
            font-weight:bold !important;
        }
        .text-nota {
            font-size : 18px !important;
        }
    }
    
