style.
    body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #FAFAFA;
        font-family: "sans-serif";
    }
    * {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
    }
    .page {
        width: 100%;
        min-height: 70mm;
        background: white;
    }
    .subpage {
        border: 1px red solid;
        height: 70mm;
        padding : 10px;
    }
    @page {
        size: A4 landscape;
        margin: 0;
    }

    @media print {
        html, body {
            width: 100%;
            margin : 0;
            padding: 0;
            font-family: "sans-serif";
        }
        .page {
            width: 100%;
            min-height: 70mm;
            background: white;
            break-before: always;
        }
        .subpage {
            border: 1px red solid;
            height: 70mm;
            padding : 10px;
        }
    }

    th, td {
        padding-top: 10px;
    }
    
    .text {
        font-size : 9px;
    }

    .text-box {
        font-size : 14px;
    }

    .text-bold {
        font-weight : 'bold';
        font-size : 12px;
    }
    
.modal-content
    div(class="modal-header" style="background-color: rgb(236, 240, 241);")
        .pull-left
            button(onclick="printPriview();" style="margin-right: 10px;" class="btn btn-primary" type="button") PRINT PREVIEW
            button(style="margin-right: 10px;" class="btn btn-danger" type="button" data-dismiss="modal") TUTUP
        .pull-right 
            button#btnPrev(onClick="return onPrev();" style="margin-right: 10px;" class="btn btn-primary" type="button" disabled data-page = "1") <
            button#bntNext(onClick="return onNext();" style="margin-right: 10px;" class="btn btn-primary" type="button" disabled data-page = "1") >
    .modal-body(style = 'height:550px; overflow:scroll;')
        div#contentView

script(src="/js/preview.js")