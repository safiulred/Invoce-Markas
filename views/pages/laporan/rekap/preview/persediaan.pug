div
	div(style="padding: 10px; display: flex; flex-wrap: wrap; margin-right: -15px; margin-left: -15px;")
		div(style = "width : 100%;")
			center 
				h5 #{title}
			br
			hr(style="border-color: rgb(0, 0, 0); margin: -16px 0px 10px;")
	.row
		div(class="col-lg-12 col-md-12 col-xs-12 col-sm-12")
			table(id = "tableContent" class="table table-scroll" style="width: 100%; border-spacing: 5px;")
				thead
					tr
						th(width="5%" style="border-bottom: 2px solid rgb(0, 0, 0);") NO
						th(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);") BARANG
						th(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);") JENIS
						td(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);" align ='center') 
							b TEBAL
						td(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);" align ='center') 
							b UKURAN
						td(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);" align ='right') 
							b STOK
				tbody
					each d in data
						tr
							td(align = 'center') #{d.no}
							td #{d.barang}
							td #{d.category}
							td(align='center') #{d.tebal}
							td(align='center') #{d.ukuran}
							td(align='right') #{d.stock}
				tfoot
					tr
						td(align = 'right' colspan = "5") 
							b TOTAL
						td(align = 'right')
							b #{totalStock}