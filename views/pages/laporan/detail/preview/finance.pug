div
	div(style="padding: 10px; display: flex; flex-wrap: wrap; margin-right: -15px; margin-left: -15px;")
		div(style = "width : 50%;")
			h5 #{title}
			br
			hr(style="border-color: rgb(0, 0, 0); margin: -16px 0px 10px;")
			table#tableHeader(style="width: 100%; border-spacing: 5px;")
				tbody
					tr
						td(width = "30%") TANGGAL AWAL
						td(width = '1%') : 
						td #{tgl_awal}
					tr
						td TANGGAL AKHIR
						td(width = '10%') :
						td #{tgl_akhir}

	.row
		div(class="col-lg-12 col-md-12 col-xs-12 col-sm-12")
			table(id = "tableContent" class="table table-scroll" style="width: 100%; border-spacing: 5px;")
				thead
					tr
						th(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);") NO. ORDER
						th(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);") NO. FAKTUR
						th(style="border-bottom: 2px solid rgb(0, 0, 0);") TRANSAKSI
						th(style="border-bottom: 2px solid rgb(0, 0, 0);") TGL ORDER
						th(style="border-bottom: 2px solid rgb(0, 0, 0);") TGL BAYAR
						th(style="border-bottom: 2px solid rgb(0, 0, 0);") PEMESAN
						td(style="border-bottom: 2px solid rgb(0, 0, 0);" align = 'right') 
							b TAGIHAN
						td(style="border-bottom: 2px solid rgb(0, 0, 0);" align = 'right') 
							b SISA BAYAR
						td(style="border-bottom: 2px solid rgb(0, 0, 0);" align = 'right') 
							b TOTAL BAYAR
						th(style="border-bottom: 2px solid rgb(0, 0, 0);") STATUS
				tbody
					each d in data
						tr
							td(align = 'center') #{d.no_order}
							td(align = 'center') #{d.no_faktur}
							td #{d.transaksi}
							td #{d.tgl_order}
							td #{d.tgl_bayar}
							td #{d.customer}
							td(align = 'right') #{d.tagihan}
							td(align = 'right') #{d.sisa_bayar}
							td(align = 'right') #{d.total_bayar}
							td 
								center
									small(class = d.status==0?'badge bg-color-red':'badge bg-color-greenLight') #{d.labelStatus}
				tfoot
					tr
					tr
						td(align = 'right' colspan = "6") 
							b TOTAL
						td(align = 'right')
							b #{totalTag}
						td(align = 'right')
							b #{totalSisa}
						td(align = 'right')
							b #{totalBayar}
						td

