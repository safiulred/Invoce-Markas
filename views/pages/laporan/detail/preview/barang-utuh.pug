div
	div(style="padding: 10px; display: flex; flex-wrap: wrap; margin-right: -15px; margin-left: -15px;")
		div(style = "width : 100%;")
			center 
				h5 #{title}
			br
			hr(style="border-color: rgb(0, 0, 0); margin: -16px 0px 10px;")
	.row
		div(class="col-lg-12 col-md-12 col-xs-12 col-sm-12")
			table(id = "tableContent" class="table table-scroll" style="width: 100%; border-spacing: 5px;")
				thead
					tr
						th(width="5%" style="border-bottom: 2px solid rgb(0, 0, 0);") NO
						th(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);") BARANG
						th(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);") TEBAL
						th(width="10%" style="border-bottom: 2px solid rgb(0, 0, 0);") STOK
						th(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);") KATEGORI
						th(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);") SUPPLIER
						td(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);" align = 'right') 
							b HARGA BELI
						td(width="15%" style="border-bottom: 2px solid rgb(0, 0, 0);" align = 'right') 
							b HARGA JUAL
				tbody
					each d in data
						tr
							td(align = 'center') #{d.no}
							td #{d.nama_barang}
							td #{d.tebal}
							td #{d.stock}
							td #{d.category}
							td #{d.supplier}
							td(align = 'right') 
								b #{d.harga_beli}
							td(align = 'right') 
								b #{d.harga_jual}